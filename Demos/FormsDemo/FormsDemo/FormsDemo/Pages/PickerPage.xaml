<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="FormsDemo.PickerPage">
	<AbsoluteLayout>
		    <Label Text="Picker"
			 	AbsoluteLayout.LayoutBounds="0.5, 0, -1, -1"
             	AbsoluteLayout.LayoutFlags="PositionProportional" 
				BackgroundColor="Lime"
				FontSize="20"
				FontAttributes="Bold" />
		<Picker x:Name="ColumnPicker"
				Title="Picker Title"
				AbsoluteLayout.LayoutBounds="0.1, 0.1, 1, 1"
				AbsoluteLayout.LayoutFlags="All">
	        <Picker.Items>
	            <x:String>Element 1</x:String> 
	            <x:String>Element 2</x:String>
	            <x:String>Element 3</x:String>
	            <x:String>Element 4</x:String>
	            <x:String>Element 5</x:String>
	        </Picker.Items>
    	</Picker>
	</AbsoluteLayout>
</ContentPage>
